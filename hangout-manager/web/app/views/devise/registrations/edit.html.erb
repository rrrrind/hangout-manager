<div class=pad70>
  <div class=center>
    <h2>プロフィールを編集する</h2>
    <hr>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "名前" %><br>
        <div class="row justify-content-center">
          <div class="col-md-6">
            <%= f.text_field :name, { class: 'form-control', required: true } %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <div class="row justify-content-center">
          <div class="col-md-6">
            <%= f.email_field :email, { class: 'form-control', required: true } %>
          </div>
        </div>
      </div>
      <br>
      <div class="field">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <%= f.label :age, "年齢" %>
            <%= f.number_field :age, { class: 'form-control', required: true } %>
          </div>
        </div>
      </div>

      <br>
      <div class="field">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <%= f.label :sex, "性別" %>
            <%= f.select :sex, User.sexes.keys, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
          </div>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :current_password, "現在のパスワードを入力" %> <br>
        <div class="row justify-content-center">
          <div class="col-md-6">
        <%= f.password_field :current_password, { class: 'form-control', required: true } %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, "新しいパスワードを入力" %>
        <div class="row justify-content-center">
          <div class="col-md-6">
            <%= f.password_field :password, { class: 'form-control', required: true }  %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワードの確認" %><br />
        <div class="row justify-content-center">
          <div class="col-md-6">
            <%= f.password_field :password_confirmation, { class: 'form-control', required: true } %>
          </div>
        </div>
      </div>


      <div class="actions">
        <%= f.submit "プロフィールを更新する", { class: 'btn btn-primary w-25' } %>
      </div>
    <% end %>
<%= link_to '戻る', :back, { class: 'btn btn-primary w-25' } %>
  </div>
</div>
